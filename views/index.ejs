<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <!--- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        style="font-size: 100%;">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header>
        <div class=" faixaPrincipal row">
            <div class="col-sm-3 ml-3">
                <a href="/"><img src="imagens/logo.png" width="250px"></a>
            </div>
            <div class="col-sm-8 text-center mt-5">
                <h1 class="titulo">Bora Ver ?!</h1>
                <p class="subtituloHeader">Filmes, Séries e Documentários</p>
            </div>
        </div>
    </header>
    <nav class=" faixaPrincipal navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/produtos">Produtos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/promocoes">Promoções</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contato">Contato</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/carrinho">Carrinho</a>
              </li>
          </ul>
        </div>
        <div class=" entrarSair text-right">
            <span id="bemVindo"></span>
            <a href="/cadastro" id="cadastrar" class="mr-2"> Cadastre-se </a>
            <a href="/login" id="entrar"> Entrar </a>
            <a href="/" id="sair" class="ml-2"><img src="imagens/sair.png" width="30px" alt=""></a>
        </div>
      </nav>

    <section class="container mt-5">
        <div class="row ">
            <%filme.forEach((item)=> { %>

            <div class="col-sm-4 mt-5 mb-3 ">
                <h2 class="mb-3 subtitulo"><%=item.titulo%></h2>
                <a href="/single-produto?id=<%=item.filmes_id%>">
                    <img class="card-img-top" src="imagens/<%=item.fotos%>" alt="Card image cap">
                    </a>
                   <p class="mt-3 mr-5"> <%=item.sinopse%></p>
                   
            </div>
            <% }) %>

        </div>

    </section>

    <section class="container mt-5">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4 mt-5">
                    <div>
                        <a href="/single-preferencia"><img src="" alt="x" class="w-50" id="favorito1"></a>
                    </div>
                </div>
                <div class="col-sm-4 mt-5">
                    <div>
                        <a href="/single-preferencia"><img src="" alt="x" class="w-50" id="favorito2"></a>
                    </div>
                </div>
                <div class="col-sm-4 mt-5">
                    <div>
                        <a href="/single-preferencia"><img src="" alt="x" class="w-50" id="favorito3"></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="text-white text-center mt-5" id="footer">
        <p class="text-center"> &copy; 2022 - Projeto Videos - Outliers</p>
        <a href="/sobreNos" target="_blank"><img src="../imagens/pessoas.png" alt=""></a>
    </footer>

</body>
<script src="js/index.js"></script>

</html>